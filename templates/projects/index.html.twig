{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <h1>Projects index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Thumbnail</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.title }}</td>
                <td>{{ project.description }}</td>
                <td>{{ project.thumbnail }}</td>
                <td>
                    <a href="{{ path('app_projects_show', {'id': project.id}) }}">show</a>
                    <a href="{{ path('app_projects_edit', {'id': project.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_projects_new') }}">Create new</a>

<br>
<br>
<br>
     <div class="row">
        {% for project in projects %}
            <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
                <div class="card card-blog card-plain">
                    <div class="card-header p-0 mt-n4 mx-3">
                        <a class="d-block shadow-xl border-radius-xl">
                            <img src="{{ project.thumbnail }}" alt="img-blur-shadow" class="img-fluid shadow border-radius-xl">
                        </a>
                    </div>
                    <div class="card-body p-3">
                        <p class="mb-0 text-sm">Project #{{ project.id }}</p>
                        <a href="{{ path('app_projects_show', {'id': project.id}) }}">
                            <h5>
                                {{ project.title }}
                            </h5>
                        </a>
                        <p class="mb-4 text-sm">
                            {{ project.description }}
                        </p>
                        <div class="d-flex align-items-center justify-content-between">
                            <a href="{{ path('app_projects_show', {'id': project.id}) }}" class="btn btn-outline-primary btn-sm mb-0">View Project</a>
                            <div class="avatar-group mt-2">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
{% endblock %}
